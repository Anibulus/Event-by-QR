<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/fab"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:width="250dp"
        android:height="10dp"
        android:background="@drawable/boton_bonito"
        android:text="Escanear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTotalAsisten"
        app:layout_constraintVertical_bias="0.206" />

    <Button
        android:id="@+id/faInvitados"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:width="250dp"
        android:height="50dp"
        android:background="@drawable/boton_bonito"
        android:text="Ver lista de invitados"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fab"
        app:layout_constraintVertical_bias="0.193"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/txtTotalnvitados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total de invitados"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLetrero1"
        app:layout_constraintVertical_bias="0.042" />

    <TextView
        android:id="@+id/txtLetrero2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total asisten"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTotalnvitados"
        app:layout_constraintVertical_bias="0.082" />

    <TextView
        android:id="@+id/txtTotalAsisten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total asisten"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLetrero2"
        app:layout_constraintVertical_bias="0.044" />

    <TextView
        android:id="@+id/txtLetrero1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total de invitados"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118" />


</androidx.constraintlayout.widget.ConstraintLayout>